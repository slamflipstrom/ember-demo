<form>
  <label>First Name:</label>  
  {{input type="text" value=firstName placeholder=contact.firstName}}<br>
  <label>Last Name:</label>  
  {{input type="text" value=lastName placeholder=contact.lastName}}<br>
  <label>Address:</label>  
  {{input type="text" value=address placeholder=contact.address}}<br>
  <label>Country:</label>  
  {{input type="text" value=country placeholder=contact.country}}<br>
  <label>City:</label>  
  {{input type="text" value=city placeholder=contact.city}}<br>
  <label>State:</label>  
  {{input type="text" value=state placeholder=contact.state}}<br>
  <label>Zip Code:</label>  
  {{input type="text" value=zip placeholder=contact.zip}}<br>
  <label>Phone:</label>  
  {{input type="text" value=phone placeholder=contact.phone}}<br>
  <label>Email:</label>  
  {{input type="text" value=email placeholder=contact.email}}
  <button {{action "createContact"}}>Submit</button>
</form>


